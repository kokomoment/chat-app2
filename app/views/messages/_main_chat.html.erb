<div class = chat_header>
  <div class = left_header>
    <div class = header_title>
      hogefuga
    </div>
  </div>
  <div class = right_header>
    <div class = header_btn>
      <a href = "#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class = messages>
  <div class = message>
    <div class = upper_message>
      <div class = message_user>
        Tom
      </div>
      <div class = message_date>
        2021/1/1
      </div>
    </div>
    <div class = lower_message>
      <div class = message_content>
        おはよう
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', lacal: true do |f| %>
  <div class = form_input>
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class = form_image>
      <span class = image-file>画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>